#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <wait.h>
main()
{
   int pid, status;
   char c = '0', d = 'b';

   pid = fork();
   if (pid != 0) // ne e dete i e roditel
   {
      c = '2'; //roditel ima c = '2'
      wait(&status); //chakame dete
   }
   else
   {
      d = 'z'; //deteto ima d
      write(1, "\n c= ", 5);
      write(1, &c, 1);
   }
   write(1, "\n d= ", 5);
   write(1, &d, 1);
}
//
//c= 0
//d= z
//d= b